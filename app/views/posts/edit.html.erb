<h3>게시글 수정</h3>
<hr>


<form action ="/posts/<%= @post.id %>" method="post">

  <!-- put방식의 요청을 보내기 위해서는 이렇게 써야함 -->
   <input type="hidden" name="_method" value="put" />
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>


  <div class="form-group">
    <p>작성자명 : </p>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">제목</label>
    <input type="text" class="form-control" name = "title" id="exampleInputPassword1" value="<%= @post.title %>">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">내용</label>
    <textarea class="form-control" name = "content" id="exampleInputPassword1"><%= @post.content %></textarea>
  </div>


  <button type="submit" class="btn btn-primary">수정하기</button>
</form>


