<h3>게시글 작성</h3>
<hr />


<form action ="/posts" method = "post">
  <div class="form-group">
    <!-- <label for="exampleInputEmail1">작성자명</label> -->
    <p>작성자명 : </p>
  </div>


  <div class="form-group">
    <label for="exampleInputPassword1">제목</label>
    <input type="text" class="form-control" name = "title" id="exampleInputPassword1" placeholder="제목을 입력하세요">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">내용</label>
    <textarea class="form-control" name = "content" id="exampleInputPassword1" placeholder="내용을 입력하세요"></textarea>
  </div>

  <input type = "hidden" name = "authenticity_token" value = "<%=form_authenticity_token%>" />

  <button type="submit" class="btn btn-primary">Submit</button>
</form>



